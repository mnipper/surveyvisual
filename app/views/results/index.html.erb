<div class="navbar">
  <div class="navbar-inner">
    <a class="brand" href="#">AdaptLab</a>
    <ul class="nav pull-right">
      <li class="dropdown">
        <a class="dropdown-toggle" data-toggle="dropdown" href="#">Result<b class="caret"></b></a>
        <ul class="dropdown-menu">
          <% @results.each do |result| %>
            <li>
              <%= link_to result.result_id, participant_result_answers_path(@participant, result.result_id) %>
            </li>
          <% end %>
        </ul>
      </li>
      <li class="dropdown">
        <a class="dropdown-toggle" data-toggle="dropdown" href="#">Participant <span class="badge badge-info"><%= @participant._id %></span><b class="caret"></b></a>
        <ul class="dropdown-menu">
          <li><a href="#"><%= @participant._id %></a></li>
        </ul>
      </li>
    </ul>
  </div>
</div>

<div id="chart" align="center"></div>
<script>
  var graph = new Rickshaw.Graph({
        element: document.querySelector("#chart"),
        renderer: 'line',
        width: 600,
        height: 200,
        series: [{
                data: [ { x: 0, y: 22.007723 }, { x: 1, y: 50}, { x: 2, y: 60}, {x: 3, y: 30}, {x: 4, y: 50} ],
                color: 'steelblue'
        }]
  });

  var yAxis = new Rickshaw.Graph.Axis.Y({
    graph: graph
  });

  var xAxis = new Rickshaw.Graph.Axis.X({
    graph: graph
  });

  graph.render();
  xAxis.render();
  yAxis.render();
</script>


  <% Question.each do |question| %>
  <% next if question.answers.empty? %>
  <table class="table table-hover">
    <caption>
      <p class="lead"><%= question.screen_text %></p>
    </caption>
    <thead>
      <tr>
        <th>Result</th>
        <th>Datetime</th>
        <th class="pull-right">Response</th>
      </tr>
    </thead>
    <tbody>
    <% question.answers.each do |answer| %>
      <tr>
        <td>
          <%= link_to answer.result_id, participant_result_answers_path(@participant, answer.result_id) %>
        </td>
        <td>
          <span class="label">
          <i class="icon-time"></i>
            <%= answer.response_date.to_formatted_s(:long_ordinal) %>
          </span>
        </td>
        <td>
          <p class="pull-right"><%= answer.result_answer %></p>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <hr />
  <% end %>
