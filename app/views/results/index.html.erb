<div class="navbar">
  <div class="navbar-inner">
    <a class="brand" href="#">AdaptLab</a>
    <ul class="nav pull-right">
      <li class="dropdown">
        <a class="dropdown-toggle" data-toggle="dropdown" href="#">Result<b class="caret"></b></a>
        <ul class="dropdown-menu">
          <% @results.each do |result| %>
            <li>
              <%= link_to result.result_id, participant_result_answers_path(@participant, result.result_id) %>
            </li>
          <% end %>
        </ul>
      </li>
      <li class="dropdown">
        <a class="dropdown-toggle" data-toggle="dropdown" href="#">Participant <span class="badge badge-info"><%= @participant %></span><b class="caret"></b></a>
        <ul class="dropdown-menu">
          <li><a href="#"><%= @participant %></a></li>
        </ul>
      </li>
    </ul>
  </div>
</div>

<div id="chart" align="center"></div>
<script>
  var graph = new Rickshaw.Graph({
        element: document.querySelector("#chart"),
        renderer: 'line',
        width: 600,
        height: 200,
        series: [{
                data: [ { x: 0, y: 22.007723 }, { x: 1, y: 50}, { x: 2, y: 60}, {x: 3, y: 30}, {x: 4, y: 50} ],
                color: 'steelblue'
        }]
  });

  var yAxis = new Rickshaw.Graph.Axis.Y({
    graph: graph
  });

  var xAxis = new Rickshaw.Graph.Axis.X({
    graph: graph
  });

  graph.render();
  xAxis.render();
  yAxis.render();
</script>


<% @results.each do |result| %>
  <% #result.answers.each do |answer| %>
  <% answer = result.answers.first %>
  <table class="table table-hover">
    <caption>
      <p class="lead"><%= answer.question.first.screen_text %></p>
    </caption>
    <thead>
      <tr>
        <th>Datetime</th>
        <th class="pull-right">Response</th>
      </tr>
    </thead>
    <tbody>
    <% answer.question.first.answers.each do |answer| %>
      <tr>
        <td>
          <span class="label">
          <i class="icon-time"></i>
            <%= DateTime.strptime(answer.response_date, '%Y-%m-%d %H:%M:%S').to_formatted_s(:long_ordinal) %>
          </span>
        </td>
        <td>
          <p class="pull-right"><%= answer.result_answer %></p>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <% #end %>
<% end %>
